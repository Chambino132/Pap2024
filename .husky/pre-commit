#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Rodar o phpstan
./vendor/bin/sail php ./vendor/bin/phpstan analyze
if [ $? -ne 0 ]; then
    echo "AtenÃ§Ã£o! Problema com PHPSTAN. Resolva antes de continuar... ðŸ˜‰";
    exit 1;
fi;

# rodar os testes
./vendor/bin/sail pest --parallel
if [ $? -ne 0 ]; then
    echo "AtenÃ§Ã£o! Problema com os TESTES. Resolva antes de continuar... ðŸ˜‰";
    exit 1;
fi;

# Formatar cada arquivo alterado usando o Laravel Pint
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".php\{0,1\}$") || true

for FILE in $STAGED_FILES
do
    ./vendor/bin/sail pint "${FILE}";
    git add "${FILE}";
done;

exit 0;